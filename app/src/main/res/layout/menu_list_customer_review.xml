<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingVertical="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_menu_customer_review_menuName"
            android:text="메뉴이름"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:fontFamily="@font/rixyeoljeongdo_regular"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_menu_customer_review_designerName"
            android:text="디자이너 이름"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:layout_marginLeft="50dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        >

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_menu_customer_review"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:numStars="5"
            android:rating="1.5"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_menu_customer_review_description"
            android:text="편안한 분위기에서 기분좋게 머리 했네요~!!"
            android:textColor="@color/black"
            android:textSize="13dp"
            />

    </LinearLayout>

</LinearLayout>