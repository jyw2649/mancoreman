<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp"
    android:weightSum="100"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_main_01"
            android:text="행복한 변화의 시작"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:fontFamily="@font/rixyeoljeongdo_regular"
            android:transitionName="transition_main_text_01"
            android:shadowColor ="#0f0f0f"
            android:shadowRadius="1.6"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_main_02"
            android:text="Man Core Man"
            android:textSize="25dp"
            android:textColor="@color/yellow_500"
            android:textStyle="bold"
            android:fontFamily="@font/rixyeoljeongdo_regular"
            android:layout_marginTop="20dp"
            android:transitionName="transition_main_text_02"
            android:shadowColor ="#0f0f0f"
            android:shadowRadius="1.6"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:orientation="vertical"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_input_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/directLogin_id"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidthFocused="2dp"
            app:startIconDrawable="@drawable/icon_person_black_24"
            app:startIconTint="@color/black"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black"
            app:errorEnabled="true"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtTxt_id"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_input_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/directLogin_pw"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidthFocused="2dp"
            app:startIconDrawable="@drawable/icon_lock_black_24"
            app:startIconTint="@color/black"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/black"
            app:errorEnabled="true"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtTxt_pw"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:maxLines="1"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/btn_login"
            android:text="로그인"
            app:cornerRadius="10dp"
            app:icon="@drawable/icon_login_black_24"
            app:iconTint="@color/white"
            app:iconGravity="textEnd"
            app:iconPadding="10dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:layout_marginTop="10dp"
            />



        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/btn_signup"
            android:text="회원가입"
            android:textColor="@color/black"
            android:layout_gravity="right"
            />


    </LinearLayout>


</LinearLayout>