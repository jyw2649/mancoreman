<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="100"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_main_01"
            android:text="행복한 변화의 시작"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:fontFamily="@font/rixyeoljeongdo_regular"
            android:transitionName="transition_main_text_01"
            android:shadowColor ="#0f0f0f"
            android:shadowRadius="1.6"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_main_02"
            android:text="Man Core Man"
            android:textSize="25dp"
            android:textColor="@color/yellow_500"
            android:textStyle="bold"
            android:fontFamily="@font/rixyeoljeongdo_regular"
            android:transitionName="transition_main_text_02"
            android:layout_marginTop="30dp"
            android:shadowColor ="#0f0f0f"
            android:shadowRadius="1.6"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        >

        <com.nhn.android.naverlogin.ui.view.OAuthLoginButton
            android:id="@+id/buttonOAuthLoginImg"
            android:layout_width="wrap_content"
            android:layout_height="50dp">
        </com.nhn.android.naverlogin.ui.view.OAuthLoginButton>


        <!-- #00ff0000 버튼 배경 투명 -->
        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/btn_direct_login"
            android:background="#00ff0000"
            android:text="직접 입력해서 로그인"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />


    </LinearLayout>


</LinearLayout>